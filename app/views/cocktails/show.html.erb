<h1>Your Cocktail</h1>

<div>
  <%=link_to "[HOME]", cocktails_path(@cocktail) %>
</div>

<h2><%= @cocktail.name%></h2>


<div>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %>
      <%= link_to "   [X]", dose_path(dose),
      method: :delete,
      data: {confirm: "Are you sure?"} %>
      </li>
     <% end %>
   </ul>
</div>

<br>
<%=link_to "[Add ingredient]", new_cocktail_dose_path(@cocktail) %>
<br>

